// Adding Element in a vector and Display
#include <bits/stdc++.h>
using namespace std;

int main()
{
    vector<int> v; // Creating an empty vector v of integers

    v.push_back(1); // Adding element 1 to the back/last of vector v
    v.push_back(3); // Adding element 3 to the back of vector v

    cout << "size: " << v.size() << endl; // Printing the size of vector v

    cout << "elements: " << endl;
    for (int i = 0; i < v.size(); i++)
    // Looping through the elements of vector v
    {
        cout << v[i] << " "; // Printing each element of vector v
    }
    cout << endl;

    return 0;
}
