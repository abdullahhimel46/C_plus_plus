// VectorOperationsAndAssignment
#include <bits/stdc++.h>
using namespace std;

/* This program initializes two vectors, manipulates them,
and showcases how vector assignments work.*/

int main()
{
    // Initialize a vector 'v' with elements 1, 2, 3, 4, 5, 6
    vector<int> v = {1, 2, 3, 4, 5, 6};

    // Display original elements of vector 'v'
    cout << "Original elements:" << endl;
    cout << "v : ";
    for (int i = 0; i < v.size(); i++)
    {
        cout << v[i] << " ";
    }
    cout << endl;

    // Remove the last element from vector 'v' using pop_back()
    v.pop_back();

    // Display elements of vector 'v' after removing an element
    cout << "After popping an element:" << endl;
    cout << "v : ";
    for (int i = 0; i < v.size(); i++)
    {
        cout << v[i] << " ";
    }
    cout << endl;

    // Initialize a vector 'x' with elements 1, 3, 5
    vector<int> x = {1, 3, 5};

    // Display elements of vector 'x'
    cout << "x : ";
    for (int i = 0; i < x.size(); i++)
    {
        cout << x[i] << " ";
    }
    cout << endl;

    // Assigning the elements of vector 'x' to vector 'v'
    v = x;

    // Displaying elements of vector 'v' after assigning values from 'x'
    cout << "after assigning values from x:" << endl;
    cout << "v : ";
    for (int i = 0; i < v.size(); i++)
    {
        cout << v[i] << " ";
    }

    return 0;
}
