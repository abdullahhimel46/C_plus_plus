#include <bits/stdc++.h>
using namespace std;

const char nl = '\n';

void solve()
{
    int n;
    // cout << "Please enter n: ";
    cin >> n;
    int mat[n][n];

    int a = 0, b = 1, x = 2 * n - 1;
    for (int i = 0; i < n; i++)
    {
        // printing space
        for (int j = 1; j < b; j++)
        {
            cout << " ";
        }
        b++;
        // printing star
        for (int j = a; j < n; j++)
        {
            cout << "*";
        }
        a++;

        for (int j = n; j < x; j++)
        {
            cout << "*";
        }
        x--;

        cout << nl;
    }
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    solve();
    return 0;
}
