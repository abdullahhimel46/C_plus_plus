#include <bits/stdc++.h>
using namespace std;

const char nl = '\n';

void solve()
{
    int n;
    // cout << "Please enter n: ";
    cin >> n;
    int mat[n][n], a = n - 1;
    // first half
    for (int i = 0; i < n; i++)
    {
        // printing space
        for (int j = 0; j < a; j++)
        {
            cout << " ";
        }
        a--;
        cout << "*";
        // printing space
        for (int j = 0; j < i; j++)
            cout << " ";

        // second half
        // printing space
        if (i > 1)
        {
            for (int j = 0; j <= i - 2; j++)
                cout << " ";
        }
        // printing star
        if (i > 0)
        {
            cout << "*";
        }

        cout << nl;
    }
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    solve();
    return 0;
}
