#include <bits/stdc++.h>
using namespace std;

const char nl = '\n';

void solve()
{
    int n;
    cout<<"Please enter n: ";
    cin >> n;
    int mat[n][n], y = 2, x = 2;
                                        // n = 4
    for (int i = 0; i < n; i++)         // i    j       y
    {                                   // 0    [0,2]   2
        //printing space                // 1    [0,1]   1
        for (int j = 0; j <= y; j++)    // 2    0       0
        {
            cout << " ";
        }
        y--;

        // printing star                 // n = 3
        for (int j = x; j < n; j++)      // i    j       x
        {                                // 0    2       2
            cout << "*";                 // 1   [1,2]    1
        }                                // 2   [0,2]    0
        x--;
        cout << nl;
    }
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    solve();
    return 0;
}
