#include <bits/stdc++.h>
using namespace std;

const char nl = '\n';

void solve()
{
    int n;
    // cout << "Please enter n: ";
    cin >> n;
    int mat[n][n], a = 1;
    // n = 4
    for (int i = 0; i < n; i++)
    {
        // printing space
        if (i > 0)
        {
            for (int j = 0; j < a; j++)
            {
                cout << " ";
            }
            a++;
        }
        cout << "*";
        cout << nl;
    }
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    solve();
    return 0;
}
