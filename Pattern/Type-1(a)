#include <bits/stdc++.h>
using namespace std;

const char nl = '\n';

void solve()
{
    int n;
    cout << "Please enter n: ";
    cin >> n;
    int mat[n][n], x = n - 1;

    for (int i = 0; i < n; i++)
    {

        // printing star             // n = 4
        for (int j = 0; j <= x; j++) // i    j        x
        {                            // 0    [0,3]    3
            cout << "*";             // 1    [0,2]    2
        }                            // 2    [0,1]    1
        x--;
        cout << nl;
    }
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    solve();
    return 0;
}
